<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#963c3c"
    android:orientation="vertical"
    tools:context=".Stats">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            layout="@layout/header"
            android:layout_width="700dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/stats_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/baocun"
            android:text="统  计"
            android:textColor="#000000"
            android:textSize="22dp"
            tools:layout_editor_absoluteX="555dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/stats_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="1215dp"
            android:layout_y="53dp"
            android:background="@drawable/baocun"
            android:text="返  回"
            android:textColor="#000000"
            android:textSize="22dp"
            tools:layout_editor_absoluteX="555dp"
            tools:layout_editor_absoluteY="281dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品名称 :"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="291dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="型号 :"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/stats_tv1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_test2_2"
            android:gravity="center"
            android:text="QDX2-S13/30"
            android:textColor="#000000"
            android:textSize="22dp"
            tools:visibility=" " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="测试日期 :"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/stats_tv2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#98fffe"
            android:gravity="center"
            android:text="2018-10-10"
            android:textColor="#000000"
            android:textSize="22dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="至"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/stats_tv3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#98fffe"
            android:gravity="center"
            android:text="2018-10-10"
            android:textColor="#000000"
            android:textSize="22dp" />
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp" />
</LinearLayout>